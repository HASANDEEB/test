<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"


    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:src="@drawable/tabebk_logoo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="34dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView2" />

        <costumize.ArabTextView


            android:textSize="20dip"
            android:textColor="@color/myblue"
            android:padding="3dp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="عنوان  العيادة"
            android:textIsSelectable="false"
            android:id="@+id/title" />

        <costumize.ArabTextView
            android:padding="3dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="المدينة"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:textSize="14dip"
            android:textColor="@color/myblue"/>

        <Spinner
            android:id="@+id/clinic_city"
            android:background="@drawable/shape"
            android:drawSelectorOnTop="true"
            android:textSize="18dip"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:spinnerMode="dialog"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minHeight="40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <costumize.ArabTextView
            android:padding="3dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="المنطقة"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:textSize="14dip"
            android:textColor="@color/myblue"/>

        <Spinner
            android:id="@+id/clinic_area"
            android:background="@drawable/shape"
            android:drawSelectorOnTop="true"
            android:textSize="18dip"
            android:layout_marginBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:spinnerMode="dialog"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minHeight="40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp" />

        <costumize.ArabTextView
            android:padding="3dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="الشارع"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:textSize="14dip"
            android:textColor="@color/myblue"/>

        <costumize.ArabEditText
            android:id="@+id/c_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:padding="3dp"
            android:background="@drawable/shape"
            android:textColor="#1996d7"
            />


        <costumize.ArabTextView
            android:padding="3dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="اسم العيادة"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:textSize="14dip"
            android:textColor="@color/myblue"
            android:id="@+id/c_title_txt" />

        <costumize.ArabEditText
            android:id="@+id/c_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:padding="3dp"
            android:background="@drawable/shape"
            android:textColor="#1996d7"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <costumize.ArabButton
            android:id="@+id/b_continue"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18dip"

            android:background="@drawable/bg_button"
            android:text="انشاء حساب"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />
    </LinearLayout>


</LinearLayout></ScrollView>