
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"


        android:background="#ffffff">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView android:src="@drawable/tabebk_logoo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

            <costumize.ArabTextView


            android:textSize="22dip"
            android:textColor="@color/myblue"
            android:padding="3dp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="بحث حسب ؟"
            />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <Spinner

                        android:background="@drawable/shape"
                        android:drawSelectorOnTop="true"
                        android:textSize="18dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dialog"
                        android:id="@+id/type_spinner"
                        android:minHeight="40dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#3a939295"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp" />

                </LinearLayout>

                <costumize.ArabTextView
                    android:textSize="14dp"
                    android:textColor="@color/myblue"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="بحث عن"
                    android:layout_weight="3.5"
                    android:layout_marginTop="3dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/area_list"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/city_spinner"
                        android:background="@drawable/shape"
                        android:drawSelectorOnTop="true"
                        android:textSize="18dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dialog"
                        android:minHeight="40dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#3a939295"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp" />

                </LinearLayout>

                <costumize.ArabTextView
                    android:textSize="14dp"
                    android:textColor="@color/myblue"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="المدينة"
                    android:layout_weight="3.5"
                    android:layout_marginTop="3dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                    android:id="@+id/city_list"
                    android:layout_weight="1">

                    <Spinner
                    android:id="@+id/area_spinner"
                    android:background="@drawable/shape"
                    android:drawSelectorOnTop="true"
                    android:textSize="18dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:spinnerMode="dialog"
                        android:minHeight="40dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3a939295"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

            </LinearLayout>

                <costumize.ArabTextView
                    android:textSize="14dp"
                    android:textColor="@color/myblue"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="المنطقة"
                    android:layout_weight="3.5"
                    android:layout_marginTop="3dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:id="@+id/spec">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        android:visibility="visible"
                android:layout_marginTop="8dp"
                android:id="@+id/special_list"
                    android:layout_weight="1">

                    <Spinner
                    android:id="@+id/speciality_spinner"
                    android:background="@drawable/shape"
                    android:drawSelectorOnTop="true"
                    android:textSize="18dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:spinnerMode="dialog"
                        android:transitionGroup="false"
                        android:minHeight="40dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3a939295"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp" />

            </LinearLayout>

                <costumize.ArabTextView
                    android:textSize="14dp"
                    android:textColor="@color/myblue"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="الاختصاص"
                    android:layout_weight="3.5"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:id="@+id/all_doc"
                android:onClick="allDocSearch">

                <costumize.ArabTextView
                    android:textSize="16dip"
                    android:textColor="@color/myblue"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="بحث حسب الاسم"
                    android:onClick="allDocSearch" />

                <costumize.ArabCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_doctor_check"
                    android:onClick="allDocSearch" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/search_doc_name">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginTop="2dp"
                android:id="@+id/name_check"
                    android:visibility="gone">




                <costumize.ArabEditText
                    android:id="@+id/search_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:hint=" أدخل اسما ..."
                    android:padding="3dp"
                    android:background="@drawable/shape"
                    android:textColor="#1996d7"


                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3a939295"/>

            </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:onClick="docSearchmap"
                android:layout_marginTop="10dp">

                <costumize.ArabTextView
                    android:textSize="16dip"
                    android:textColor="@color/myblue"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="عرض نتائج البحث على الخريطة"
                    android:onClick="docSearchmap" />

                <costumize.ArabCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_check"
                    android:onClick="docSearchmap" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:id="@+id/distance_search"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:onClick="docSearchdis"
                    android:layout_marginTop="10dp">

                    <costumize.ArabTextView
                        android:textSize="14dp"
                        android:textColor="#0a9d02"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text=":  1كم"
                        android:onClick="docSearchdis"
                        android:id="@+id/dis_val"
                        android:visibility="gone"
                        android:gravity="center" />

                    <costumize.ArabTextView
                        android:textSize="14dp"
                        android:textColor="@color/myblue"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="حدد نطاق عميلة البحث بالكيلومتر "
                        android:onClick="docSearchdis" />

                    <costumize.ArabCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/distance_check"
                        android:onClick="docSearchdis" />

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/search_doc_dis"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="1"
                        android:id="@+id/textView"
                        android:gravity="center_vertical" />

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:progress="1"
                        android:indeterminate="false"
                        android:id="@+id/dis"
                        android:layout_weight="1"

                        android:foregroundGravity="fill"
                        android:splitTrack="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="20"
                        android:id="@+id/textView2"
                        android:gravity="center_vertical" />
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3a939295"/>

            <costumize.ArabButton
            android:id="@+id/b_continue"
    android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18dip"

            android:background="@drawable/bg_button"
            android:text="بحث"
            android:textStyle="bold"
                android:layout_marginBottom="5dp" />
        </LinearLayout>


    </LinearLayout></ScrollView>