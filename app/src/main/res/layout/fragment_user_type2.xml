
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"


>

    <ImageView
        android:src="@drawable/tabebk_logoo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView7" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <LinearLayout
                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_width="fill_parent" android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">


                    <costumize.ArabButton
                        android:id="@+id/b_doc"
                        android:textColor="@color/myred"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/bg_button_itemadv2"
                        android:text="المتابعة كطبيب"
                        android:textStyle="bold"
                        android:textSize="18dip"
                        android:drawableRight="@drawable/ch_doctor"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp" />

                    <costumize.ArabButton
                    android:id="@+id/b_ph"
                    android:textColor="@color/myred"
                    android:layout_width="match_parent" android:layout_height="wrap_content"

                    android:layout_weight="1.0"
                    android:background="@drawable/bg_button_itemadv2"
                    android:text="المتابعة كصيدلاني"
                    android:textStyle="bold"
                    android:textSize="18dip"

                        android:layout_marginTop="25dp"
                        android:drawableRight="@drawable/ch_pharmacy"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                    <costumize.ArabButton
                        android:id="@+id/b_us"
                        android:textColor="@color/myred"
                        android:layout_width="match_parent" android:layout_height="wrap_content"

                        android:textSize="18dip"

                        android:background="@drawable/bg_button_itemadv2"
                        android:text="المتابعة كمستخدم"
                        android:textStyle="bold"
                        android:layout_marginTop="25dp"
                        android:drawableRight="@drawable/ch_user"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_weight="1" />

                    <costumize.ArabButton
                        android:id="@+id/b_visitor"
                        android:drawableRight="@drawable/ch_user"
                        android:background="@drawable/bg_button_itemadv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="المتابعة كزائر"
                        android:textStyle="bold"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/myred"
                        android:textSize="18dip"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1" />


                    <costumize.ArabTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:gravity="center"
                        android:text="إذا كنت  تملك حسابا مسبقا؟"
                        android:id="@+id/t1"
                        android:textSize="14dip" />

                    <costumize.ArabButton
                        android:id="@+id/b_register"
                        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="تسجيل  الدخول"
                        android:textStyle="bold"
                        android:textColor="#ffff160f" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>