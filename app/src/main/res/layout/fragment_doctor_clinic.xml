
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"


    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:src="@drawable/tabebk_logoo"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginBottom="34dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView" />

        <costumize.ArabTextView


            android:textSize="20dip"
            android:textColor="@color/myblue"
            android:padding="3dp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="معلومات العيادة"
            android:id="@+id/title" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <costumize.ArabTextView
                    android:padding="3dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="متواجد حالياً"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:textSize="14dip"
                    android:textColor="@color/mydarkgray"
                    android:id="@+id/status" />
            </LinearLayout>

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="حالة العيادة"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5"
                android:id="@+id/statustxt" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:layout_weight="1"
                android:textColor="@color/mydarkgray"
                android:id="@+id/c_city" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="المدينة"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/mydarkgray"
                android:layout_weight="1"
                android:id="@+id/c_area" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="المنطقة"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/mydarkgray"
                android:layout_weight="1"
                android:id="@+id/c_street" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="الشارع"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/mydarkgray"
                android:layout_weight="1"
                android:id="@+id/c_loc" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="الموقع"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/mydarkgray"
                android:layout_weight="1"
                android:id="@+id/c_phone" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="هاتف"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/mydarkgray"
                android:layout_weight="1"
                android:id="@+id/c_mobile" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="موبايل"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5" />

        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/mydarkgray"
                android:layout_weight="1"
                android:id="@+id/c_website" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="الموقع الاكتروني"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/mydarkgray"
                android:layout_weight="1"
                android:id="@+id/c_email" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="البريد الاكتروني"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5"
                android:id="@+id/a" />

        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/mydarkgray"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:id="@+id/c_info" />

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="معلومات اضافية"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="1.5"
                 />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3a939295"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <costumize.ArabTextView
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="أوقات الدوام"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textSize="14dip"
                android:textColor="@color/myblue"
                android:layout_weight="2"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/works"></LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:id="@+id/hospital_ly">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <costumize.ArabTextView
                    android:padding="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="المشافي التي تم الالتزام معها"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:textSize="14dip"
                    android:textColor="@color/myblue"
                    android:layout_weight="2"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hospital"></LinearLayout>
        </LinearLayout>

        <costumize.ArabButton
            android:id="@+id/b_continue"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18dip"

            android:background="@drawable/bg_button"
            android:text="عودة"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />
    </LinearLayout>


</LinearLayout></ScrollView>
